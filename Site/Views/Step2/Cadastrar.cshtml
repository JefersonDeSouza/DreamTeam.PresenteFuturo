@model Site.Signatures.Step2Signature

@{
    ViewBag.Title = "Passo 2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Cadastrar", "Step2", FormMethod.Post, new { @class = "contact100-form validate-form", @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <span class="contact100-form-title">
            Olá!
        </span>
        @Html.ValidationSummary(true, "", new { @class = "text-danger pl-5" })

        <div class="wrap-input100 validate-input" data-validate="Nome Da Criança é obrigatório">
            <span class="label-input100">Nome Da Criança</span>
            <br />
            @Html.ValidationMessageFor(model => model.NomeCrianca, "", new { @class = "text-danger pl-5", required = "required" })
            @Html.TextBoxFor(model => model.NomeCrianca, new { @class = "input100", placeholder = "Informe o nome da Criança" })
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Nome Do Convidado é obrigatório">
            <span class="label-input100">Nome Do Convidado</span>
            <br />
            @Html.ValidationMessageFor(model => model.NomeConvidado, "", new { @class = "text-danger pl-5", required = "required" })
            @Html.TextBoxFor(model => model.NomeConvidado, new { @class = "input100", @placeholder = "Informe o nome do Convidado" })
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="E-mail é obrigatório">
            <span class="label-input100">E-mail</span>
            <br />
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger pl-5", required = "required" })            
            @Html.TextBoxFor(model => model.Email, new { @class = "input100", @placeholder = "Informe o E-mail" })
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Celular é obrigatório">
            <span class="label-input100">Celular</span>
            <br />
            @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger pl-5", required = "required" })
            @Html.TextBoxFor(model => model.Celular,  new { @class = "input100", @placeholder = "Informe o Celular" })
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Valor é obrigatório">
            <span class="label-input100">Valor</span>
            <br />
            @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger pl-5", required = "required" })
            @Html.TextBoxFor(model => model.Valor, "{0:n2}", new { @class = "input100", @placeholder = "Informe o Valor" })
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input">
            <span class="label-input100">Messagem</span>
            <br />
            @Html.ValidationMessageFor(model => model.Messagem, "", new { @class = "text-danger pl-5" })
            @Html.TextAreaFor(model => model.Messagem, new { @class = "input100", @placeholder = "Grave uma mensagem" })
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input">
            <span class="label-input100">Forma de Pagamento</span>
            <br />
            @Html.ValidationMessageFor(model => model.FormaPagamento, "", new { @class = "text-danger pl-5" })
            @Html.DropDownList(
                                "FormaPagamento",
                                EnumHelper.GetSelectList(typeof(Biblioteca.Enums.FormaPagamentoEnum)),
                                "Selecione a forma de pagamento",
                                new { @class = "form-control" })
            <span class="focus-input100"></span>
        </div>

        <div class="container-contact100-form-btn">
            <div class="wrap-contact100-form-btn">
                <div class="contact100-form-bgbtn"></div>
                <button class="contact100-form-btn">
                    <span>
                        Cadastrar
                        <i class="fa fa-long-arrow-right m-l-7" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </div>
    </div>

    <div id="dropDownSelect1"></div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
}
